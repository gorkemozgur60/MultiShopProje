@model CreateRegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>MultiShop</title>

	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-30/css/opensans-font.css">
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-30/fonts/line-awesome/css/line-awesome.min.css">

	<link rel="stylesheet" href="https://jqueryvalidation.org/files/demo/site-demos.css">

	<link rel="stylesheet" href="~/colorlib-regform-30/css/style.css" />
</head>
<body class="form-v4">
	<div class="page-content">
		<div class="form-v4-content">
			<div class="form-left">
				<h2>MultiShop E-Ticaret</h2>
				<p class="text-1">MultiShop sitesine kayıt olup indirimlerden yararlanabilirsiniz.</p>
				<div class="form-left-last">
					<a href="/Login/Index" class="account">Giriş Yap</a>
				</div>
			</div>
			<form class="form-detail" method="post">
				<h2>MultiShop Kayıt Formu</h2>
				<div class="form-group">
					<div class="form-row form-row-1">
						<label for="first_name">Adınız</label>
						<input type="text" id="first_name" class="input-text" asp-for="Name">
					</div>
					<div class="form-row form-row-1">
						<label for="last_name">Soyadınız</label>
						<input type="text" id="last_name" class="input-text" asp-for="Surname">
					</div>
				</div>
				<div class="form-row form-row-1">
					<label for="user_name">Kullanıcı Adınız</label>
					<input type="text" id="user_name" class="input-text" asp-for="Username">
				</div>
				<div class="form-row">
					<label for="your_email">E-mail</label>
					<input type="email" id="your_email" asp-for="Email" class="input-text" required pattern="[^@@]+@@[^@@]+.[a-zA-Z]{2,6}">
				</div>
				<div class="form-group">
					<div class="form-row form-row-1 ">
						<label for="password">Şifre</label>
						<input type="password" asp-for="Password" id="password" class="input-text" required>
					</div>
					<div class="form-row form-row-1">
						<label for="comfirm-password">Şifre Tekarı</label>
						<input type="password" id="comfirm_password" asp-for="PasswordConfirm" class="input-text" required>
					</div>
				</div>
				<div class="form-checkbox">
					<label class="container">
						<p>Kabul Ediyorum <a href="#" class="text">Şartlar ve koşulları</a></p>
					  	<input type="checkbox" name="checkbox">
					  	<span class="checkmark"></span>
					</label>
				</div>
				<br/>
				@if (!ViewData.ModelState.IsValid)
				{
					<div class="alert alert-danger">
						@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
						{
							<p>@error.ErrorMessage</p>
						}
					</div>
				}
				
				<div class="form-row-last">
					<input type="submit" class="register" value="Kayıt">
				</div>
			</form>

		</div>
	</div>
	<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
	<script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
	<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
</body>
</html>