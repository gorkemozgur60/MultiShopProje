<form method="get">
    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sepet Tutarı</span></h5>
    <div class="bg-light p-30 mb-5">
        <div class="border-bottom pb-2">
            <div class="d-flex justify-content-between mb-3">
                <h6>Toplam Ürün Fiyatı :</h6>
                <h6>@ViewBag.total ₺</h6>
            </div>
            <div class="d-flex justify-content-between mb-1">
                <h6 class="font-weight-medium">Kdv Tutarı:</h6>
                <h6 class="font-weight-medium">@ViewBag.tax ₺</h6>
            </div>
            <div class="d-flex justify-content-between mb-1">
                <h6 class="font-weight-medium">İndirim Oranı :</h6>
                <h6 class="font-weight-medium">% @ViewBag.discountRate </h6>
            </div>
            <div class="d-flex justify-content-between mb-1">
                <h6 class="font-weight-medium">İndirimsiz Tutar :</h6>
                <h6 class="font-weight-medium">@ViewBag.totalPriceWithTax ₺</h6>
            </div>
        </div>
        <div class="pt-2">
            <div class="d-flex justify-content-between mt-2">
                <h5>İndirimli Güncel Tutar</h5>
                <h5>@ViewBag.totalNewPriceWithDiscount ₺</h5>
            </div>
            <a href="" class="btn btn-block btn-primary font-weight-bold my-3 py-3">Ödemeye doğru devam et</a>
            <button class="btn btn-block btn-primary font-weight-bold my-3 py-3">Ödemeye doğru devam et</button>
</form>
