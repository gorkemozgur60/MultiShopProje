@model UpdateFeatureSliderDto
@{
    ViewData["Title"] = "UpdateFeatureSlider";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Görsel Güncelleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" class="form-control" asp-for="FeatureSliderId" />
                        <label>Görsel Başlığı</label>
                        <input type="text" class="form-control" asp-for="Title" />
                        <br />
                        <label>Görsel Url</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" />
                        <br />
                        <label>Görsel Açıklaması</label>
                        <textarea class="form-control" asp-for="Description" rows="5"></textarea>
                        <br />
                        <br />
                        <button class="btn btn-primary">Görseli Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


